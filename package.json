{
  "name": "almajlis-workspace",
  "version": "1.0.0",
  "description": "ALMAJLIS Discord Bot Development Environment",
  "private": true,
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:detached": "docker-compose up -d --build",
    "dev:clean": "docker-compose up --build --force-recreate",
    "stop": "docker-compose down",
    "stop:clean": "docker-compose down -v --remove-orphans",
    "restart": "docker-compose restart",
    "restart:backend": "docker-compose restart backend",
    "restart:dashboard": "docker-compose restart dashboard",
    "restart:bot": "docker-compose restart bot",
    "restart:mongodb": "docker-compose restart mongodb",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "logs:dashboard": "docker-compose logs -f dashboard",
    "logs:bot": "docker-compose logs -f bot",
    "logs:mongodb": "docker-compose logs -f mongodb",
    "logs:mongo-express": "docker-compose logs -f mongo-express",
    "shell:backend": "docker-compose exec backend sh",
    "shell:dashboard": "docker-compose exec dashboard sh",
    "shell:bot": "docker-compose exec bot sh",
    "shell:mongodb": "docker-compose exec mongodb mongosh",
    "ps": "docker-compose ps",
    "build": "docker-compose build",
    "build:backend": "docker-compose build backend",
    "build:dashboard": "docker-compose build dashboard",
    "build:bot": "docker-compose build bot",
    "clean": "docker system prune -af && docker volume prune -f",
    "reset": "npm run stop:clean && npm run clean && npm run dev"
  }
}
